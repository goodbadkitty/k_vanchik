using System;

namespace KR{
    class Program{
    	static void MatrixFill(int[,] mat) { // метод заповенення масиву рандомними значеннями від 50 до 100
    		Random rand = new Random();
    		for ( int i = 0; i < mat.GetLength(0); i++ ) {
    			for ( int j = 0; j < mat.GetLength(1); j++ ) {
    				mat[i,j] = rand.Next(15, 55);
    			}
    		}
    	}
    	static void MatrixPrint(int[,] mat){ // метод виведення масиву у консоль
			for (int i = 0; i < mat.GetLength(0); i++){			
				for (int j = 0; j < mat.GetLength(1); j++)
					Console.Write($"{mat[i, j]} ");
			Console.WriteLine();
			}
		}
		static void MatrixMaxRow(int[,] mat) { // метод знаходження максимального згачення в рядку
			int max = mat[0, 0];
			for ( int i = 0; i < mat.GetLength(0); i++ ) {
				for ( int j = 0; j < mat.GetLength(1); j++ ) {
					if ( max < mat[i, j] ) {
						max = mat[i, j];
					}
				}
				Console.WriteLine($"Max in row{i+1} = {max}");
				max = mat[0, 0];
			}
		}
        static void MatrixMinCol(int[,] mat) { // метод знаходження мінімального значення в стовпці
			int min = mat[0, 0];
			for ( int i = 0; i < mat.GetLength(1); i++ ) {
				for ( int j = 0; j < mat.GetLength(0); j++ ) {
					if ( min > mat[j, i] ) {
						min = mat[j, i];
					}
				}
				Console.WriteLine($"Min in col{i+1} = {min}");
				min = mat[0, 0];
			}
		}
    	static void MatrixSwapCol(int[,] mat) { // метод заміни першого і останього стовпця
			for ( int i = 0; i < mat.GetLength(1); i++ ) {
				int temp = mat[i, 0];

				mat[i, 0] = mat[i, mat.GetLength(1) - 1];
				mat[i, mat.GetLength(1) - 1] = temp;
			}
		}
    	static void Main(string[] args) {
    		int n = 8;
    		int m = 5;
            Console.WriteLine($"Size of matrix is {n}x{m}");
    		int[,] matrix = new int[n, m];
    		// виклики методів
    		MatrixFill(matrix);
    		MatrixPrint(matrix);
            MatrixMaxRow(matrix);
			MatrixMinCol(matrix);
			MatrixSwapCol(matrix);
			MatrixPrint(matrix);
    	}
    }
}
